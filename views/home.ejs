<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Welcome to the URL Shortener</h1>
    <% if (locals.id) { %>
    <p>
      Your Shortened URL :
      <a href="http://localhost:4000/url/<%= id %>" target="_blank"
        >https://localhost:4000/url/<%= id %></a
      >
    </p>
    <% } %>
    <div>
      <form action="/url" method="POST">
        <label for="url">Your Original URL:</label>
        <input
          type="text"
          name="url"
          placeholder="https://example.com"
          required
        />
        <button type="submit">Shorten URL</button>
      </form>
    </div>
    <div>
        <% if (locals.urls) { %>
         <table>
            <thead>
              <tr>
                <th>S. No.</th>
                <th>Short ID</th>
                <th>Redirect ID</th>
                <th>Clicks</th>
              </tr>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectUrl %></td>
                    <td><%= url.visitHistory.length %></td>
                  </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>
  </body>
</html>
